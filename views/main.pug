block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Вход

        // register form
        form(method='POST' action='/register')
          div.form-group
            label(for='E-mail') E-mail:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          div.form-group
            label(for='pw') Пароль:
            input#pw.form-control(type='password' name='password').mb-2
          button.btn.btn-primary(type='submit') Войти
          .card.text-center
  .card-header Bootstrap 4 card example
  .card-body
    .card-title Hello World, this is PugHtml
    i.fa.fa-home.fa-2x.text-primary
  .card-footer.text-muted powered by Bibooki
